<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BointApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BointApp.Views.StationsPageView"
             x:DataType="vm:StationsPageViewModel">
    <Grid RowDefinitions="Auto, *" Margin="20">
        <TextBlock Grid.Row="0" Text="Zarządzaj Stacjami" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,20"/>

        <Grid Grid.Row="1" ColumnDefinitions="*, Auto">

            <ListBox Grid.Column="0" ItemsSource="{Binding Stations}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#333" BorderThickness="0,0,0,1" Padding="10">
                            <Grid ColumnDefinitions="3*, 2*, 2*, Auto" ColumnSpacing="10" VerticalAlignment="Center">

                                <TextBlock Grid.Column="0" Text="{Binding Location}" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Zajęte miejsca: {0} / {1}">
                                            <Binding Path="AvailableBikes.Count"/>
                                            <Binding Path="Capacity"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <ProgressBar Grid.Column="2" Minimum="0" Maximum="{Binding Capacity}" Value="{Binding AvailableBikes.Count}" VerticalAlignment="Center"/>
                                
                                <Button Grid.Column="3" Content="Usuń"
                                        Command="{Binding $parent[ListBox].DataContext.RemoveStationCommand}"
                                        CommandParameter="{Binding}"
                                        IsVisible="{Binding $parent[ListBox].DataContext.IsAdmin}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Border Grid.Column="1" Width="300" Margin="20,0,0,0" Padding="15"
                    BorderBrush="{DynamicResource SystemAccentColor}" BorderThickness="1" CornerRadius="5"
                    IsVisible="{Binding IsAdmin}">
                <StackPanel Spacing="10">
                    <TextBlock Text="Dodaj nową stację" FontSize="18" FontWeight="SemiBold"/>
                    
                    <TextBox Text="{Binding NewStationLocation}" Watermark="Lokalizacja stacji"/>
                    
                    <TextBlock Text="Pojemność stacji:"/>
                    <NumericUpDown Value="{Binding NewStationCapacity}" Minimum="1" Maximum="50"/>

                    <Button Content="Dodaj Stację" Command="{Binding AddStationCommand}" HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>