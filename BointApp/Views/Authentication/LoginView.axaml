<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BointApp.ViewModels.Authentication"
             mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="400"
             x:Class="BointApp.Views.LoginView"
             x:DataType="vm:LoginViewModel">
    <StackPanel Spacing="15" Width="300" VerticalAlignment="Center">
        <TextBlock Text="Logowanie" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
        
        <TextBox Text="{Binding Email}" Watermark="E-mail"/>
        <TextBox Text="{Binding Password}" Watermark="Hasło" PasswordChar="*"/>
        
        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" IsVisible="{Binding ErrorMessage, Converter={x:Static ObjectConverters.IsNotNull}}"/>
        
        <Button Content="Zaloguj się" Command="{Binding LoginCommand}" HorizontalAlignment="Stretch"/>
        <Button Content="Nie masz konta? Zarejestruj się" Command="{Binding GoToRegisterCommand}" HorizontalAlignment="Stretch" Classes="Link"/>
    </StackPanel>
</UserControl>